---
layout: nil
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Mogara Free Software</title>
    <link>http://mogara.org</link>
    <atom:link href="http://mogara.org/rss.xml" rel="self" type="application/rss+xml" />
    <description>Home page of mogara free software organization</description>
    <language>zh-cn</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts limit:10 %}
    <item>
      <title>{{ post.title }}</title>
      <link>http://mogara.org{{ post.url }}</link>
      <pubDate>{{ post.date | date_to_string }}</pubDate>
      <author>Mogara</author>
      <guid>http://mogara.org{{ post.id }}</guid>
      <description>{{ post.content | xml_escape }}</description>
    </item>
    {% endfor %}
  </channel>
</rss>